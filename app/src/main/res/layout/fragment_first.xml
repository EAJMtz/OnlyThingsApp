<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<View
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:layout_gravity="bottom|end"
    android:background="@color/black"/>

    <View
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="start|end"
        android:background="@color/black"
        android:backgroundTint="#8D1997" />

    <View
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="end"
        android:background="@color/black"
        android:backgroundTint="#5A954F" />

    <View
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="top|center"
        android:background="@color/black"
        android:backgroundTint="#680C0C" />

    <View
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="start|center"
        android:background="@color/black"
        android:backgroundTint="#41539D" />

    <View
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:background="@color/black"
        android:backgroundTint="#602F90" />

    <View
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="end|center"
        android:background="@color/black"
        android:backgroundTint="#CFE94D" />

    <View
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="bottom|center"
        android:background="@color/black"
        android:backgroundTint="#E285B4" />

    <View
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="bottom|start"
        android:background="@color/black"
        android:backgroundTint="#ED7171" />


</FrameLayout>